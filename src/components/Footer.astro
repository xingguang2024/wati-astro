---
/**
 * Footer Component - Astra AI Agent
 *
 * Based on footer-astra_aiagent.php from WordPress
 * Features:
 * - CTA section with buttons
 * - Logo and links
 * - Copyright information
 * - Decorative background
 */

const currentYear = new Date().getFullYear();
---

<footer
  id="colophon"
  class="site-footer relative bg-zinc-900 text-white pt-20 pb-0 bg-[url('/images/stars.svg')] bg-contain bg-no-repeat bg-center"
>
  <!-- Overlay -->
  <div class="absolute inset-0 -z-10 bg-black/70"></div>

  <div class="container mx-auto px-4">
    <!-- CTA Section -->
    <div class="astra-logo-foot">
      <div class="max-w-435 mx-auto">
        <h2
          class="font-['DM_Sans'] font-bold text-4xl md:text-5xl text-white leading-tight mb-6"
        >
          Convert more than ever with Astra
        </h2>
        <p class="text-xl md:text-2xl text-white/90 mb-8">
          The always-on AI Agent that qualifies leads, guides
          <br class="hidden md:block" />
          exploration, and turns traffic into pipeline.
        </p>

        <div class="flex flex-wrap items-center gap-3 mb-16">
          <a
            href="https://astra.wati.io/register/"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 border-2 border-zinc-300 text-white font-semibold text-sm px-4 py-2 rounded-lg hover:bg-white hover:text-zinc-900 hover:border-white transition-all duration-300 relative pr-10"
          >
            Get Started for Free
          </a>
          <button
            id="astraBookDemoBtnFooter"
            class="inline-flex items-center gap-2 border-2 border-zinc-300 text-white font-semibold text-sm px-4 py-2 rounded-lg hover:bg-white hover:text-zinc-900 hover:border-white transition-all duration-300 relative pr-10"
          >
            Book a demo
          </button>
        </div>
      </div>
    </div>

    <!-- Logo and Links Section -->
    <div class="astra-logo-copy relative mt-20">
      <!-- Decorative Background -->
      <div
        class="absolute bottom-0 right-0 w-[800px] h-auto pointer-events-none hidden lg:block"
        style="aspect-ratio: 4/1"
      >
        <img
          src="/images/footerastra.svg"
          alt=""
          class="w-full h-full object-contain object-bottom-right"
        />
      </div>

      <div
        class="relative z-10 flex flex-col md:flex-row justify-between items-center gap-6 pb-8"
      >
        <!-- Logo and Links -->
        <div class="flex flex-col md:flex-row items-center gap-4">
          <a href="/products/astra/">
            <img
              width="110"
              height="100"
              src="/images/astra-newflogo.svg"
              alt="Astra Logo"
              class="object-contain"
            />
          </a>
          <a
            href="https://www.wati.io/privacy-policy/"
            class="footer-links text-white text-xs font-medium hover:text-zinc-300 transition-colors ml-2.5"
          >
            Privacy Policy
          </a>
          <a
            href="https://www.wati.io/terms-and-conditions/"
            class="footer-links text-white text-xs font-medium hover:text-zinc-300 transition-colors ml-2.5"
          >
            Terms and Conditions
          </a>
        </div>

        <!-- Copyright -->
        <div class="text-center md:text-right">
          <span class="text-white text-xs font-medium">
            Â© {currentYear} Astra. All rights reserved.
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer button hover effect with arrow */
  .site-footer .btnss.foot a.btn2:hover::after,
  footer button:hover::after {
    content: "";
    background: url(/images/arrow-black.svg) no-repeat center;
    background-size: contain;
    width: 16px !important;
    height: 16px !important;
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
  }

  @media screen and (max-width: 570px) {
    footer .md\:text-right {
      text-align: center;
      width: 100%;
    }
  }
</style>

<script>
  // Footer book demo button
  const footerBookDemoBtn = document.getElementById("astraBookDemoBtnFooter");
  if (footerBookDemoBtn) {
    footerBookDemoBtn.addEventListener("click", (e) => {
      e.preventDefault();
      window.dispatchEvent(new CustomEvent("openBookDemoModal"));
    });
  }
</script>

<!-- HubSpot Forms Script -->
<script is:inline charset="utf-8" type="text/javascript" src="https://js.hsforms.net/forms/embed/v2.js"></script>
