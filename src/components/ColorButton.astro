---
/**
 * ColorButton Component
 *
 * A button/badge with a gradient border effect.
 * Replicates the .colorbtn style from the original template.
 *
 * @param href - Optional link URL (makes it an anchor tag)
 * @param class - Additional CSS classes
 */

interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
const Element = href ? "a" : "span";
---

<Element href={href} class:list={["color-btn", className]}>
  <slot />
</Element>
