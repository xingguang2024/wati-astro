---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Wati - WhatsApp Business API Platform">
	<section class="min-h-screen flex items-center justify-center bg-linear-to-br from-purple-50 via-blue-50 to-pink-50">
		<div class="container mx-auto px-4 text-center">
			<div class="max-w-4xl mx-auto">
				<h1 class="text-6xl md:text-7xl font-extrabold text-zinc-900 mb-6">
					Welcome to <span class="bg-linear-to-r from-purple-500 via-blue-500 to-pink-500 bg-clip-text text-transparent">Wati</span>
				</h1>
				<p class="text-xl md:text-2xl text-zinc-700 mb-12">
					Build better customer experiences with WhatsApp Business API
				</p>

				<div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto">
					<a
						href="/astra"
						class="group relative overflow-hidden bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
					>
						<div class="absolute inset-0 bg-linear-to-br from-purple-500/10 to-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
						<div class="relative">
							<div class="w-16 h-16 mx-auto mb-4 bg-linear-to-br from-purple-500 to-blue-500 rounded-xl flex items-center justify-center">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
								</svg>
							</div>
							<h3 class="text-2xl font-bold text-zinc-900 mb-2">Astra AI Agent</h3>
							<p class="text-zinc-600">
								AI-powered agents for web, WhatsApp, and voice
							</p>
							<div class="mt-4 text-blue-600 font-semibold group-hover:translate-x-2 transition-transform inline-flex items-center gap-2">
								Explore Astra
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</div>
						</div>
					</a>

					<a
						href="https://wati.io"
						target="_blank"
						rel="noopener"
						class="group relative overflow-hidden bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
					>
						<div class="absolute inset-0 bg-linear-to-br from-pink-500/10 to-orange-500/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
						<div class="relative">
							<div class="w-16 h-16 mx-auto mb-4 bg-linear-to-br from-pink-500 to-orange-500 rounded-xl flex items-center justify-center">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
								</svg>
							</div>
							<h3 class="text-2xl font-bold text-zinc-900 mb-2">WhatsApp Platform</h3>
							<p class="text-zinc-600">
								Complete WhatsApp Business API solution
							</p>
							<div class="mt-4 text-pink-600 font-semibold group-hover:translate-x-2 transition-transform inline-flex items-center gap-2">
								Visit Wati.io
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</div>
						</div>
					</a>
				</div>

				<div class="mt-16 text-zinc-500">
					<p class="text-sm">
						Built with <span class="text-purple-500">Astro</span> + <span class="text-blue-500">Tailwind CSS</span> + <span class="text-pink-500">React</span>
					</p>
				</div>
			</div>
		</div>
	</section>
</Layout>
