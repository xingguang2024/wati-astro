<script>
  // Voice Demo Modal
  import { createRoot } from "react-dom/client";
  import React from "react";

  interface VoiceDemoModalProps {
    isOpen: boolean;
    onClose: () => void;
  }

  function VoiceDemoModal({ isOpen, onClose }: VoiceDemoModalProps) {
    const dialogRef = React.useRef<HTMLDialogElement>(null);

    React.useEffect(() => {
      if (isOpen && dialogRef.current) {
        dialogRef.current.showModal();
        document.body.style.overflow = "hidden";
      } else if (dialogRef.current && !isOpen) {
        dialogRef.current.close();
        document.body.style.overflow = "";
      }

      return () => {
        document.body.style.overflow = "";
      };
    }, [isOpen]);

    const handleClose = () => {
      document.body.style.overflow = "";
      onClose();
    };

    if (!isOpen) return null;

    return React.createElement(
      "dialog",
      {
        ref: dialogRef,
        id: "voiceDemoModal",
        className: "modal",
        onClick: (e: any) => {
          if (e.target === dialogRef.current) {
            handleClose();
          }
        },
      },
      React.createElement(
        "div",
        {
          className: "w-[96%] lg:w-[960px] h-[646px] p-0 bg-white rounded-2xl shadow-2xl overflow-hidden",
          onClick: (e: any) => e.stopPropagation(),
        },
        React.createElement("iframe", {
          src: "https://dev-astra.watiapp.io/voice-demo",
          allow: "microphone",
          className: "w-full h-full border-0",
        })
      )
    );
  }

  let voiceDemoModalOpen = false;
  let voiceDemoRoot: any = null;
  const modalContainer = document.getElementById("modal-root");

  async function renderVoiceDemoModal(isOpen: boolean) {
    if (!modalContainer) return;

    if (!voiceDemoRoot) {
      const tempDiv = document.createElement("div");
      modalContainer.appendChild(tempDiv);
      voiceDemoRoot = createRoot(tempDiv);
    }

    voiceDemoRoot.render(
      React.createElement(VoiceDemoModal, {
        isOpen,
        onClose: () => {
          voiceDemoModalOpen = false;
          renderVoiceDemoModal(false);
        },
      })
    );
  }

  // Handle voice demo button
  const voiceDemoBtn = document.getElementById("voiceDemoBtn");
  if (voiceDemoBtn) {
    voiceDemoBtn.addEventListener("click", (e) => {
      e.preventDefault();
      if (!voiceDemoModalOpen) {
        voiceDemoModalOpen = true;
        renderVoiceDemoModal(true);
      }
    });
  }
</script>

