---
import Layout from "../layouts/LayoutNoHeader.astro";
import FAQ from "../components/FAQ";
import ColorButton from "../components/ColorButton.astro";

const title = "AI Agents Orchestration Platform | Astra by Wati";
const description =
  "Stop Losing Customers to Business Hours with your Astra AI Agent. The AI Agent Orchestration Platform that provides 24/7 support and lead qualification.";
---

<Layout title={title} description={description}>
  <!-- Hero Section - Chatbase inspired clean design -->
  <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-gradient-to-b from-zinc-50 to-white -z-10"></div>

    <div class="container mx-auto px-4 relative z-10">
      <!-- Wide screen: Grid layout with content left, video right -->
      <div class="grid lg:grid-cols-2 gap-12 items-center max-w-8xl mx-auto">
        <!-- Left: Content -->
        <div class="text-center lg:text-left order-1 lg:order-1">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 bg-white border border-zinc-200 rounded-full px-4 py-2 mb-8 shadow-sm">
            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
            <span class="text-sm font-medium text-zinc-700">Now with Voice AI</span>
          </div>

          <!-- Headline -->
          <h1 class="font-bold text-4xl md:text-5xl lg:text-6xl leading-[1.1] tracking-tight text-zinc-900 mb-6">
            Stop Losing Customers to Business Hours with your{" "}
            <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
              Astra AI Agent
            </span>
            .
          </h1>

          <!-- Subheadline -->
          <p class="text-lg md:text-xl leading-relaxed text-zinc-600 mb-8">
            The AI Agent Orchestration Platform that clones your best humans and knowledge base to
            provide{" "}
            <span class="font-semibold text-zinc-900">24/7 support</span> and
            <span class="font-semibold text-zinc-900"> lead qualification</span> for your business.
          </p>

          <!-- CTA -->
          <div class="flex flex-col sm:flex-row items-center gap-4">
            <a
              href="https://astra.wati.io/register/"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-2 bg-zinc-900 text-white font-semibold text-lg px-8 py-4 rounded-xl hover:bg-zinc-800 transition-all hover:shadow-lg hover:-translate-y-0.5"
            >
              Try for Free
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4.16663 10H15.8333M15.8333 10L9.99996 4.16667M15.8333 10L9.99996 15.8333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <p class="text-sm text-zinc-500">No credit card required</p>
          </div>
        </div>

        <!-- Right: YouTube Video -->
        <div class="order-2 lg:order-2">
          <div class="relative pb-[56.25%] h-0 overflow-hidden rounded-2xl shadow-2xl border border-zinc-200">
            <iframe
              class="absolute top-0 left-0 w-full h-full"
              src="https://www.youtube.com/embed/HdTLh4loRB4?autoplay=1&mute=1&loop=1&playlist=HdTLh4loRB4"
              title="Meet Astra: AI-Powered Agents for Web & WhatsApp"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Astra Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <ColorButton>Why Astra</ColorButton>
        <h2 class="font-semibold text-4xl md:text-5xl leading-tight text-zinc-900 mb-6">
          Why world's best teams choose Astra
        </h2>
        <p class="text-xl text-zinc-600 max-w-2xl mx-auto">
          Faster, smarter, and more human than anything before.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-8xl mx-auto">
        <div class="bg-zinc-50 rounded-2xl p-8 text-center hover:shadow-md transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-100 to-purple-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="font-bold text-xl text-zinc-900 mb-3">Near-human conversations</h3>
          <p class="text-base text-zinc-600 leading-relaxed">
            Astra listens, pauses, and responds like a real human — engaging users with empathy and precision.
          </p>
        </div>

        <div class="bg-zinc-50 rounded-2xl p-8 text-center hover:shadow-md transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-100 to-pink-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-bold text-xl text-zinc-900 mb-3">Real-time latency</h3>
          <p class="text-base text-zinc-600 leading-relaxed">
            Handle unlimited conversations simultaneously. Respond instantly when customers reach out.
          </p>
        </div>

        <div class="bg-zinc-50 rounded-2xl p-8 text-center hover:shadow-md transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-100 to-orange-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-xl text-zinc-900 mb-3">Best-in-class accuracy</h3>
          <p class="text-base text-zinc-600 leading-relaxed">
            Trained on your real data and business context, Astra consistently delivers precise, brand-aligned responses.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Astra Vibe Section - Natural Language Builder -->
  <section class="py-12 bg-zinc-50">
    <div class="container mx-auto px-4">
      <div class="max-w-8xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <ColorButton>Build with Natural Language</ColorButton>
            <h2 class="font-semibold text-4xl md:text-5xl leading-tight text-zinc-900 mb-6">
              Build with Natural Language, even your kid or mother can build.
            </h2>
            <p class="text-xl text-zinc-600 leading-relaxed mb-8">
              Simply describe your agent (e.g., "Create a support agent"), and Astra drafts the logic.
              You can change, edit, improve — all in natural language.
            </p>

            <!-- Example -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-zinc-200">
              <div class="flex items-start gap-3">
                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-zinc-500 mb-1">Example prompt:</p>
                  <p class="text-zinc-900 font-medium italic">
                    "Create an inbound sales agent that qualifies leads for my solar business and books appointments on Calendly."
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="order-1 md:order-2">
            <div class="bg-gradient-to-br from-blue-100 via-purple-100 to-pink-100 rounded-3xl p-8 aspect-square flex items-center justify-center">
              <img
                src="/images/ai-kf1.webp"
                alt="Build with natural language"
                class="w-full h-auto rounded-2xl shadow-xl"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- An Agent Just For You Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-8xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <div class="bg-gradient-to-br from-pink-100 via-orange-100 to-yellow-100 rounded-3xl p-8 aspect-square flex items-center justify-center">
              <img
                src="/images/ai-kf2.webp"
                alt="Train with any source"
                class="w-full h-auto rounded-2xl shadow-xl"
              />
            </div>
          </div>

          <div>
            <ColorButton>An Agent Just For You</ColorButton>
            <h2 class="font-semibold text-4xl md:text-5xl leading-tight text-zinc-900 mb-6">
              An Agent just for You
            </h2>
            <p class="text-xl text-zinc-600 leading-relaxed mb-8">
              Train with any source, upload your content, simply your website links, any document.
              Astra learns your voice and logic, then engages users naturally.
            </p>

            <!-- Training Sources -->
            <div class="grid grid-cols-2 gap-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-zinc-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-zinc-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <span class="text-zinc-700 font-medium">Documents</span>
              </div>

              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-zinc-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-zinc-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </div>
                <span class="text-zinc-700 font-medium">Website</span>
              </div>

              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-zinc-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-zinc-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <span class="text-zinc-700 font-medium">CRM Data</span>
              </div>

              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-zinc-100 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-zinc-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                  </svg>
                </div>
                <span class="text-zinc-700 font-medium">Transcripts</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Voice Agent Section - Modal Trigger -->
  <section class="py-12 bg-zinc-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <ColorButton>Voice Agent</ColorButton>
        <h2 class="font-semibold text-4xl md:text-5xl leading-tight text-zinc-900 mb-6">
          Don't just take our word. Talk to AI agents now.
        </h2>
        <p class="text-xl text-zinc-600 mb-10 max-w-2xl mx-auto">
          Experience the world's most human AI voice engine. Zero latency. Infinite context. Multiple languages and accents.
        </p>

        <!-- Voice Demo Trigger Button -->
        <button
          id="voiceDemoBtn"
          class="inline-flex items-center gap-3 bg-white border-2 border-zinc-900 text-zinc-900 font-semibold text-lg px-8 py-4 rounded-xl hover:bg-zinc-900 hover:text-white transition-all hover:shadow-lg hover:-translate-y-0.5"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
          </svg>
          Try Voice Demo
        </button>
      </div>
    </div>
  </section>

  <!-- How Astra Works Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <ColorButton>How It Works</ColorButton>
        <h2 class="font-semibold text-4xl md:text-5xl leading-tight text-zinc-900 mb-6">
          From telling to the idea of an AI agent to "live in your favorites channel" in mins.
        </h2>
        <p class="text-xl text-zinc-600">
          You don't need code. You just need a conversation.
        </p>
      </div>

      <!-- Feature Accordion -->
      <div class="max-w-8xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
          <!-- Left: Accordion Items -->
          <div class="accordion join join-vertical w-full gap-3">
            <!-- Step 1 -->
            <div class="collapse collapse-arrow join-item border border-zinc-200 rounded-2xl bg-white shadow-sm hover:shadow-md transition-shadow" data-step="1">
              <input type="radio" name="feature-accordion" checked="checked" />
              <div class="collapse-title flex items-center gap-4 py-5 px-6">
                <span class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-500 text-white font-bold rounded-full flex items-center justify-center flex-shrink-0">1</span>
                <div>
                  <p class="text-sm text-zinc-500 font-medium mb-1">Build Fast</p>
                  <h3 class="font-bold text-xl md:text-2xl text-zinc-900">Build with natural language</h3>
                </div>
              </div>
              <div class="collapse-content px-6 pb-5">
                <p class="text-lg text-zinc-600 leading-relaxed mb-4">
                  Skip the complexity. Just describe what you need.
                </p>
                <!-- Mobile image -->
                <div class="lg:hidden bg-gradient-to-br from-blue-100 to-purple-100 rounded-2xl p-4">
                  <img
                    src="/images/ai-kf1.webp"
                    alt="Build with natural language"
                    class="w-full h-auto rounded-xl shadow-lg"
                  />
                </div>
              </div>
            </div>

            <!-- Step 2 -->
            <div class="collapse collapse-arrow join-item border border-zinc-200 rounded-2xl bg-white shadow-sm hover:shadow-md transition-shadow" data-step="2">
              <input type="radio" name="feature-accordion" />
              <div class="collapse-title flex items-center gap-4 py-5 px-6">
                <span class="w-10 h-10 bg-gradient-to-br from-pink-500 to-orange-500 text-white font-bold rounded-full flex items-center justify-center flex-shrink-0">2</span>
                <div>
                  <p class="text-sm text-zinc-500 font-medium mb-1">Customize Faster</p>
                  <h3 class="font-bold text-xl md:text-2xl text-zinc-900">Customize the "brain"</h3>
                </div>
              </div>
              <div class="collapse-content px-6 pb-5">
                <p class="text-lg text-zinc-600 leading-relaxed mb-4">
                  Upload your content. Astra learns your voice and logic, then engages users naturally.
                </p>
                <!-- Mobile image -->
                <div class="lg:hidden bg-gradient-to-br from-pink-100 to-orange-100 rounded-2xl p-4">
                  <img
                    src="/images/ai-kf2.webp"
                    alt="Customize the brain"
                    class="w-full h-auto rounded-xl shadow-lg"
                  />
                </div>
              </div>
            </div>

            <!-- Step 3 -->
            <div class="collapse collapse-arrow join-item border border-zinc-200 rounded-2xl bg-white shadow-sm hover:shadow-md transition-shadow" data-step="3">
              <input type="radio" name="feature-accordion" />
              <div class="collapse-title flex items-center gap-4 py-5 px-6">
                <span class="w-10 h-10 bg-gradient-to-br from-purple-500 to-blue-500 text-white font-bold rounded-full flex items-center justify-center flex-shrink-0">3</span>
                <div>
                  <p class="text-sm text-zinc-500 font-medium mb-1">Deploy in Minutes</p>
                  <h3 class="font-bold text-xl md:text-2xl text-zinc-900">Install agent easily</h3>
                </div>
              </div>
              <div class="collapse-content px-6 pb-5">
                <p class="text-lg text-zinc-600 leading-relaxed mb-4">
                  One agent, every channel. Deploy to your website, WhatsApp, phone, SMS, and RCS. One continuous memory across all touch points.
                </p>
                <!-- Mobile image -->
                <div class="lg:hidden bg-gradient-to-br from-purple-100 to-blue-100 rounded-2xl p-4">
                  <img
                    src="/images/ai-kf3.webp"
                    alt="Install agent easily"
                    class="w-full h-auto rounded-xl shadow-lg"
                  />
                </div>
              </div>
            </div>
          </div>

          <!-- Right: Image Display (Desktop only) -->
          <div class="hidden lg:block relative lg:sticky lg:top-8 h-fit">
            <div id="feature-image-container" class="bg-gradient-to-br from-blue-100 to-purple-100 rounded-3xl p-6 md:p-8 shadow-xl transition-all duration-500">
              <img
                id="feature-image"
                src="/images/ai-kf1.webp"
                alt="Build with natural language"
                class="w-full h-auto rounded-2xl shadow-lg transition-opacity duration-300"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Performance Section -->
  <section class="py-12 bg-zinc-50 relative bg-[url('/images/world-map.svg')] bg-center bg-no-repeat bg-contain">
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h2 class="font-semibold text-4xl md:text-5xl text-zinc-900 mb-4">
          Astra performance
        </h2>
        <p class="text-xl text-zinc-600">
          Gain instant visibility into response rates, lead conversions, and engagement.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <div class="bg-white rounded-2xl shadow-sm p-8 text-center hover:shadow-md transition-shadow">
          <p class="text-5xl md:text-6xl font-bold text-zinc-900 mb-4">100%</p>
          <p class="text-lg text-zinc-600">Instant response</p>
        </div>
        <div class="bg-white rounded-2xl shadow-sm p-8 text-center hover:shadow-md transition-shadow">
          <p class="text-5xl md:text-6xl font-bold text-zinc-900 mb-4">24/7</p>
          <p class="text-lg text-zinc-600">Availability</p>
        </div>
        <div class="bg-white rounded-2xl shadow-sm p-8 text-center hover:shadow-md transition-shadow">
          <p class="text-5xl md:text-6xl font-bold text-zinc-900 mb-4">30+</p>
          <p class="text-lg text-zinc-600">Multi-language support</p>
        </div>
        <div class="bg-white rounded-2xl shadow-sm p-8 text-center hover:shadow-md transition-shadow">
          <p class="text-5xl md:text-6xl font-bold text-zinc-900 mb-4">99%</p>
          <p class="text-lg text-zinc-600">User satisfaction</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Features Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <ColorButton>Key Features</ColorButton>
        <h2 class="font-semibold text-4xl md:text-5xl text-zinc-900 mb-6">
          What makes Astra different
        </h2>
        <p class="text-xl text-zinc-600 max-w-2xl mx-auto">
          An intelligent layer that listens, acts, and learns across every customer touchpoint.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-8xl mx-auto">
        <div class="group">
          <div class="bg-zinc-50 rounded-2xl p-6 hover:shadow-md transition-all hover:-translate-y-1">
            <img
              src="/images/card1.png"
              alt="Spotlight & Highlighter"
              class="w-full mb-6 rounded-xl"
            />
            <h3 class="font-bold text-xl text-zinc-900 mb-3">
              Spotlight & Highlighter
            </h3>
            <p class="text-base text-zinc-600 leading-relaxed">
              Ask questions directly from any page. Highlight text or spotlight content to chat instantly with AI.
            </p>
          </div>
        </div>

        <div class="group">
          <div class="bg-zinc-50 rounded-2xl p-6 hover:shadow-md transition-all hover:-translate-y-1">
            <img
              src="/images/card2.webp"
              alt="Go live everywhere"
              class="w-full mb-6 rounded-xl"
            />
            <h3 class="font-bold text-xl text-zinc-900 mb-3">
              Go live everywhere
            </h3>
            <p class="text-base text-zinc-600 leading-relaxed">
              Launch on Web, WhatsApp, or Voice in minutes. One click connects Astra wherever your customers are.
            </p>
          </div>
        </div>

        <div class="group">
          <div class="bg-zinc-50 rounded-2xl p-6 hover:shadow-md transition-all hover:-translate-y-1">
            <img
              src="/images/card3.webp"
              alt="Universal voice"
              class="w-full mb-6 rounded-xl"
            />
            <h3 class="font-bold text-xl text-zinc-900 mb-3">
              Universal voice
            </h3>
            <p class="text-base text-zinc-600 leading-relaxed">
              Speak and text fluidly in 30+ languages. Astra adapts to accents and switches languages on the fly.
            </p>
          </div>
        </div>

        <div class="group">
          <div class="bg-zinc-50 rounded-2xl p-6 hover:shadow-md transition-all hover:-translate-y-1">
            <img
              src="/images/card4.webp"
              alt="AI actions and tool calling"
