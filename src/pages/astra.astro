<script>
  // Book Demo Modal functionality
  import BookDemoModal from '../components/BookDemoModal';

  let modalRoot: HTMLDivElement | null = null;

  function openBookDemoModal() {
    if (!modalRoot) {
      modalRoot = document.createElement('div');
      document.body.appendChild(modalRoot);
    }

    // Use React to render the modal
    import('react-dom/client').then(({ createRoot }) => {
      import('react').then((React) => {
        const root = createRoot(modalRoot!);
        root.render(
          React.createElement(BookDemoModal, {
            isOpen: true,
            onClose: () => {
              root.unmount();
              modalRoot?.remove();
              modalRoot = null;
            }
          })
        );
      });
    });
  }

  // Listen for modal open events from header and page
  window.addEventListener('openBookDemoModal', openBookDemoModal);

  // Handle page book demo button
  const bookDemoBtn = document.getElementById('bookDemoBtn');
  if (bookDemoBtn) {
    bookDemoBtn.addEventListener('click', openBookDemoModal);
  }
</script>
