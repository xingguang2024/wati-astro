# =============================================================================
# Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Authentication
# =============================================================================
# Secret key for JWT token signing (generate a strong random string)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production

# =============================================================================
# AI Services
# =============================================================================
# Google AI API key for editor features (get one at https://ai.google.dev)
GOOGLE_API_KEY=

# AI Gateway API Key (for existing PlateEditor AI features)
AI_GATEWAY_API_KEY=

# OpenAI API key (optional, alternative AI provider)
OPENAI_API_KEY=

# =============================================================================
# Super Admin Account
# =============================================================================
# These values will be used to create the initial admin account
# Run: bun run seed:admin after deployment to create the account
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password-immediately
ADMIN_USERNAME=admin
ADMIN_FIRST_NAME=Super
ADMIN_LAST_NAME=Admin

# =============================================================================
# Cloudflare Bindings (for local development with wrangler)
# =============================================================================
# These are configured in wrangler.toml and Cloudflare Pages dashboard
# DB, KV, R2 bindings are set automatically in production
